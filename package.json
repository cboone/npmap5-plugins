{
    "name": "maplibre-gl-wms-source",
    "exportName": "WmsSource",
    "version": "0.0.1",
    "description": "Allows WMS sources to be used with Maplibre as Raster Tiles",
    "keywords": [
        "maplibre",
        "npmap",
        "nps",
        "wms"
    ],
    "config": {
        "port": "3040"
    },
    "author": "James McAndrew  <james_mcandrew@partner.nps.gov>",
    "license": "MIT",
    "main": "dist/maplibre-gl-wms-source.js",
    "types": "dist/src/index.d.ts",
    "module": "dist/maplibre-gl-wms-source.esm.js",
    "browser": "dist/maplibre-gl-wms-source.min.js",
    "files": [
        "dist"
    ],
    "scripts": {
        "clean": "rm -rf ./dist",
        "build-dev": "NODE_ENV=development npm run build",
        "watch-dev": "NODE_ENV=development npm run watch",
        "build-prod": "NODE_ENV=production npm run build",
        "documentation": "documentation readme --section API src/index.ts",
        "serve": "npx serve . --listen $npm_package_config_port",
        "preopenurl": "echo http://localhost:${npm_package_config_port}/examples",
        "openurl": "npx open-cli http://localhost:${npm_package_config_port}/examples",
        "openurlchrome": "npx open-cli http://localhost:${npm_package_config_port}/examples -- 'google chrome' --incognito",
        "openurlfirefox": "npx open-cli http://localhost:${npm_package_config_port}/examples -- firefox",
        "build": "npm run clean && rollup -c rollup.config.js",
        "watch": "rollup -c rollup.config.js --watch"
    },
    "devDependencies": {
        "@open-wc/building-rollup": "^2.0.2",
        "@types/geojson": "^7946.0.10",
        "documentation": "^14.0.0",
        "maplibre-gl": "^2.4.0",
        "open-cli": "^7.1.0",
        "rollup-plugin-sourcemaps": "^0.6.3",
        "rollup-plugin-terser": "^7.0.2",
        "rollup-plugin-typescript2": "^0.34.1",
        "rollup-plugin-web-worker-loader": "^1.6.1",
        "serve": "^14.1.2",
        "typescript": "^4.8.4"
    },
    "dependencies": {
        "rollup-plugin-import-css": "^3.0.3"
    }
}
